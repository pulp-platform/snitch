 );
 
@@ -75,7 +75,7 @@ module cva6 import ariane_pkg::*; #(
   riscv::priv_lvl_t           priv_lvl;
   exception_t                 ex_commit; // exception from commit stage
   bp_resolve_t                resolved_branch;
